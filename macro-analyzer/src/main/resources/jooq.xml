<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <jdbc>
        <driver>org.postgresql.Driver</driver>
        <url>jdbc:postgresql://localhost:15432/macroanalyzer</url>
        <user>macrouser</user>
        <password>macropassword</password>
    </jdbc>
    <generator>
        <database>
            <name>org.jooq.meta.postgres.PostgresDatabase</name>
            <includes>.*</includes>
            <inputSchema>public</inputSchema>
        </database>
        <target>
            <packageName>com.kg.macroanalyzer.jooq.generated</packageName>
            <directory>macro-analyzer/src/main/java</directory>
        </target>
    </generator>
</configuration>
